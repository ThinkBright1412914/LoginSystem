@{
    Layout = "~/Views/Shared/_LandingPage.cshtml";
}

@model LoginSystem.Client.Models.UserVM

<div class="container bootstrap snippets bootdey">
	<h1 class="text-primary">User Details</h1>
	<hr>
	<div class="row">
		<div class="col-md-3">
			<div class="text-center">
				@if (!string.IsNullOrEmpty(Model.ImageData))
				{
					<img src="data:image/png;base64,@Model.ImageData" class="avatar img-circle img-thumbnail" alt="avatar">
				}
				else
				{
					<img src="~/Img/Profile.jpg" class="avatar img-circle img-thumbnail" alt="avatar">
				}

			</div>
		</div>

		<div class="col-md-9 personal-info">
			<h3>Personal info</h3>
			<input type="hidden" asp-for="UserId" />
			<div class="form-group">
				<label class="col-lg-3 control-label">User name:</label>
				<div class="col-lg-8">
					<input class="form-control" readonly asp-for="UserName" type="text">
				</div>
			</div>

			<div class="form-group">
				<label class="col-lg-3 control-label">Email:</label>
				<div class="col-lg-8">
					<input class="form-control" readonly asp-for=Email type="text">
				</div>
			</div>

			<div class="form-group">
				<label class="col-lg-3 control-label">Role:</label>
				<div class="col-lg-8">
					<input class="form-control" readonly asp-for=Role type="text">
				</div>
			</div>

			<div class="form-group">
				<label class="col-lg-3 control-label">Active :</label>
				<div class="col-lg-8">
					<input type="radio" name="IsActive" value="true" @(Model.IsActive ? "checked" : "") disabled /> Active
					<input type="radio" name="IsActive" value="false" @(!Model.IsActive ? "checked" : "") disabled /> Inactive
				</div>
			</div>
			<br />
			<a class="btn btn-sm btn-primary" asp-action="GetUsers" asp-controller="AdminUser">Back</a>
		</div>
	</div>
</div>