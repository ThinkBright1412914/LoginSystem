@model LoginSystem.Client.Models.UserVM

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Edit User</h5>
                    <form method="post">
                        <input type="hidden" asp-for="UserId" />
                        <div class="form-group">
                            <label>User Name</label>
                            <input type="text" class="form-control" readonly asp-for="UserName" onkeypress="return AvoidSpace(event)" />
                            <span asp-validation-for="UserName"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input type="Email" class="form-control" readonly asp-for="Email" />
                            <span asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="Role"></label>
                            <select class="form-select" asp-for="Role">
                                <option disabled>Select Role</option>
                                <option value="Admin">Admin</option>
                                <option value="User">User</option>
                            </select>
                        </div>
                        <div class="form-group col-6 mt-1">
                            <label>Force Password Reset</label>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" asp-for=isForcePswdReset>
                            </div>
                        </div>
                        <br />
                        <button class="btn btn-primary rounded-0" type="submit">Edit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
