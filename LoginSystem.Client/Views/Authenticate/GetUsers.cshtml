@{
	ViewData["Title"] = "GetUsers";
	Layout = "~/Views/Shared/_LandingPage.cshtml";
}

@model IEnumerable<LoginSystem.Client.Models.UserVM>
<p>
	<a asp-action="Create" asp-controller="User" class="btn btn-primary rounded-0"><i class="fa-solid fa-plus"></i> Add New</a>
	<a class="btn btn-sm btn-success" style="justify-content:center" asp-action="ExportExcel">ExportExcel</a>
</p>
<div class="container mt-5">
	<h4>Users List</h4> 
	<br />
	<table class="table table-striped table-bordered" id="tableInfo">
		<thead class="thead-dark">
			<tr>
				<th>Name</th>
				<th>Email</th>
				<th>IsActive</th>
				<th>Image</th>
				<th>Action(s)</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.UserName</td>
					<td>@item.Email</td>
					<td>
						@(item.IsActive ? "Active" : "InActive")
					</td>
					<td>
						<div class="row">
							<div class="col">
								<div class="col-md-3">
									<div class="text-center">
										<img src="@(item.ImageData != null ? $"data:image/png;base64,{item.ImageData}" : Url.Content("~/Img/Profile.jpg"))" 
										class="avatar img-circle img-thumbnail" alt="avatar">
									</div>
								</div>
							</div>
						</div>
					</td>
					<td>
						<a href="@Url.Action("Details", "User", new { id = item.UserId })" class="btn btn-sm btn-info"><i class="fa-solid fa-eye"></i>Info</a>
						<a href="@Url.Action("Edit", "User", new { id = item.UserId })" class="btn btn-sm btn-primary"><i class="fa-solid fa-pen-to-square">Edit</i></a>
						<a href="@Url.Action("Delete", "User", new { id = item.UserId })" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash"></i>Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

@section scripts {
	<script>
		$('#tableInfo').dataTable({
			lengthMenu: [5, 10, 15],
			displayStart: 3,
		});
	</script>
}