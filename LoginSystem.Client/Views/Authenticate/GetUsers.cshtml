@{
	ViewData["Title"] = "GetUsers";
	Layout = "~/Views/Shared/_LandingPage.cshtml";
}

@model IEnumerable<LoginSystem.Client.Models.UserVM>

<div class="container mt-5">
	<h2>Users List</h2> <a class="btn btn-sm btn-success" style="justify-content:center" asp-action="ExportExcel">ExportExcel</a>
	<br />
	<table class="table table-striped table-bordered" id="tableInfo">
		<thead class="thead-dark">
			<tr>
				<th>Name</th>
				<th>Email</th>
				<th>IsActive</th>
				<th>Image</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.UserName</td>
					<td>@item.Email</td>
					<td>
						@(item.IsActive ? "Active" : "InActive")
					</td>
					<td>
						<div class="row">
							<div class="col">
								<div class="col-md-3">
									<div class="text-center">
										<img src="data:image/png;base64,@item.ImageData" class="avatar img-circle img-thumbnail" alt="avatar">
									</div>
								</div>
							</div>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

@section scripts {
	<script>
		$('#tableInfo').dataTable({
			lengthMenu: [5, 10, 15],
			displayStart: 3,
		});
	</script>
}