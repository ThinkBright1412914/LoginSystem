@model LoginSystem.Client.Models.UserVM

@{
    Layout = null;
}

<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LoginSystem.Client.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
</head>
<body class="bg-primary">
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Activation Code</h5>
                    <form method="post">
                        <div class="form-group">
                            <label>Activation Code</label>
                            <input type="text" class="form-control" asp-for="ActivationCode" />
                            <span asp-validation-for="ActivationCode"></span>
                        </div>                      
                        <br />
                        <input class="btn btn-success" type="submit"  value="Activate"/>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
    <partial name="_Notifications" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
</body>
</html>