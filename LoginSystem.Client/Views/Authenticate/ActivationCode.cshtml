@model LoginSystem.Client.Models.UserVM


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Activation Code</h5>
                    <h7>@TempData["Error"]</h7>
                    <form method="post" action="">
                        <div class="form-group">
                            <label>Activation Code</label>
                            <input type="text" class="form-control" asp-for="ActivationCode" />
                            <span asp-validation-for="ActivationCode"></span>
                        </div>                      
                        <br />
                        <input class="btn btn-primary" type="submit" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>