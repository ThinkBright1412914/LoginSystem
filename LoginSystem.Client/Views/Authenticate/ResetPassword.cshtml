
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_LandingPage.cshtml";
}

@model LoginSystem.Client.Models.ResetPaswordVM 

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Reset Password</h5>
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="CurrentPassword"></label>
                            <input type="password" class="form-control" asp-for="CurrentPassword" />
                            <span asp-validation-for="CurrentPassword"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" asp-for="Password" id="Password" /> <input type="checkbox" id="showPassword" /> Show Password <br/>
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword"></label>
                            <input type="password" class="form-control" asp-for="ConfirmPassword" id="ConfirmPassword" /> <input type="checkbox" id="showPassword2" /> Show Password <br/>
                            <span asp-validation-for="ConfirmPassword"></span>
                        </div>
                        <br />
                        <input class="btn btn-success" type="submit" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

