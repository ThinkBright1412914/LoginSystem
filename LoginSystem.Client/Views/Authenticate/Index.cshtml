@model LoginSystem.Client.Models.LoginViewModel


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <h7>@TempData["Error"]</h7>
                    <form method="post">
                        <div class="form-group">
                            <label>User Name</label>
                            <input type="text" class="form-control" asp-for="UserName" />
                            <span asp-validation-for="UserName"></span>
                        </div>
                        <div class="form-group">
                            <label>Password:</label>
                            <input type="password" class="form-control" asp-for="Password" />
                            <span asp-validation-for="Password"></span>
                        </div>
                        <br />
                        <input class="btn btn-primary" type="submit" />
                    </form>
                </div>
                <div class="card-footer">
                    <a class="form-control text-success" asp-controller="Login" asp-action="ForgotPassword">Forgot your password</a>
                </div>
                <div class="card-footer">
                    <a class="form-control text-success" asp-controller="Register" asp-action="Index">Register as a New User</a>
                </div>
            </div>
        </div>
    </div>
</div>