	<p class="text">
		You have selected <span id="count">0</span> seats for a price of $<span id="total">0</span>
	</p>



	<div class="container mt-4">
		<h4 class="mb-4">Book Movie</h4>
		<div class="card">
			<div class="card-body">
				<form method="post" enctype="multipart/form-data">
					<div class="row">
						<!-- Title Field -->
						<div class="col-md-6 mb-3">
							<div class="form-group">
								<label for="name">No of ticket</label>
								<input type="number" id="ticketCount" class="form-control">
							</div>
						</div>

						<div class="col-md-6 mb-3">
							<div class="form-group">
								<label for="releaseDate">Seat Details</label>
								<input type="text" class="form-control form-control-short" id="seat-details" >
							</div>
						</div>

						<div class="col-md-6 mb-3">
							<div class="form-group">
								<label for="Duration">Booking date</label>
								<input type="date" class="form-control form-control-short" >
							</div>
						</div>


					</div>
					<br />
					<!-- Submit Button -->
					<button type="submit" class="btn btn-primary">Book Confirm</button>
				</form>
			</div>
		</div>
	</div>
</div>



