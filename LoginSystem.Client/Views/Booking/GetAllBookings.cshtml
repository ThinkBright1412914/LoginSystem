@model IEnumerable<LoginSystem.ViewModel.BookingDto>

<div class="container mt-5">
	<table class="table table-striped table-bordered" id="tableInfo">
		<thead class="thead-dark">
			<tr>
				<th>Id</th>
				<th>UserName</th>
				<th>BookingDate</th>
				<th>No of ticket</th>
				<th>SeatDetails</th>
				<th>BookingStatus</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.UserName</td>
					<td>@item.BookingDate</td>
				    <td>@item.NoOfTicket</td>
					<td>@item.SeatDetails</td>
					<td>@item.BookingStatus</td>
				</tr>
			}
		</tbody>
	</table>
</div>

@section scripts {
	<script>
		$('#tableInfo').dataTable({
			lengthMenu: [5, 10, 15],
			displayStart: 3,
		});
	</script>
}