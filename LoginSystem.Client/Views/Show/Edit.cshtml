@model LoginSystem.ViewModel.ShowDto

<div class="container mt-4">
    <h4 class="mb-4">Edit Show</h4>
    <div class="card">
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="Id" />
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label for="Name">Name</label>
                            <input type="text" class="form-control form-control-short" asp-for="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label for="Movie">Movie</label>
                            <select class="form-control form-control-short dropdownMovie" asp-items="Model.MovieList" asp-for="MovieId">
                                <option value="" disabled selected>Select Movie</option>
                                <span asp-validation-for="MovieId" class="text-danger"></span>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label for="ShowTime">Show Time</label>
                            <select class="form-control form-control-short dropdownMovie" asp-items="Model.ShowTimeList" asp-for="ShowTimeId">
                                <option value="" disabled selected>Select ShowTime</option>
                                <span asp-validation-for="ShowTimeId" class="text-danger"></span>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label for="Seat No">Seat No</label>
                            <input type="number" class="form-control form-control-short" asp-for="SeatNo">
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label for="ShowDate">Show Date</label>
                            <input type="text" class="form-control form-control-short" asp-for="ShowDate" id="showDate">
                            <span asp-validation-for="ShowDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label for="TicketPrice">Ticket Price</label>
                            <input type="text" class="form-control form-control-short" asp-for="TicketPrice">
                        </div>
                    </div>
                </div>
                <br />
                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary">Edit</button>
            </form>
        </div>
    </div>
</div>
